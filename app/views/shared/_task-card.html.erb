<div class="card" data-id="<%= task.id %>">
  <div class="card-content">
    <div class="card-trash">
      <p><%= task.name %></p>
      <%= link_to task_path(task),
                  method: :delete,
                  remote: true,
                  :data => { :confirm => "Are you sure you want to delete the task '#{task.name}' ? \nThis action is irreversible." } do %>
      <i class="fas fa-trash"></i>
                  <% end %>
    </div>
    <div class="con-date">
      <i class="fas fa-table"></i><span class="date"><%= task.created_at.strftime("%d %b %Y") %></span>
    </div>
  </div>
</div>
