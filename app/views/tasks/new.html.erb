<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6">
      <div class="con-form">
        <h1 class="title mb-3">Add a new task</h1>
        <%= simple_form_for @task do |f| %>
          <%= f.input :name %>
          <%= f.submit class: "btn btn-primary w-100" %>
        <% end %>
      </div>
    </div>
  </div>
</div>